<!DOCTYPE html>
<html>
<head>
  <title>Stackover</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>




	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      
	      <%= link_to "STACKGYMFLOW", root_path, class: "navbar-brand" %>
	    </div>

	    <div class="collapse navbar-collapse navbar-ex1-collapse">
          
          <ul class="nav navbar-nav navbar-right">


          	 <li class="search">
            <%= form_tag questions_path, method: :get do %>
              <div class="form-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar" %>
              </div>
           
            <% end %>
          </li>

          	<% if user_signed_in? %>
      
            <li><%= link_to "Cerrar sesion" , destroy_user_session_path, method: :delete %></li>

            <% else %>
              <li><%= link_to "Registrarme", new_user_registration_path %></li>
              <li><%= link_to "Ingresar", new_user_session_path %></li>
           

            <% end %>

          
            
          </ul>

          </div>
        </div>



	</nav>


  <% if flash[ :notice] %>

  <div class="alert alert-info">
    
    <%= flash[ :notice] %>
  </div>


  <% end %>


<% if flash[ :alert] %>

  <div class="alert alert-danger">
    
    <%= flash[ :alert] %>
  </div>


  <% end %>

<%= yield %>

</body>
</html>

<div class="container">
	
	<div class="row">
		
		<div class= "col-sm-6 col-sm-offset-3">

			<br>
			<p ><%= @question.title %></p>
				<p ><%= @question.body%></p>
			<br>
			
			<h2>Respuestas</h2>
			<br>
			<% @question.answers.each do |answer|%>
			  <div class="panel panel-default">
			    
			    <div class="panel-body"><%= answer.body %></div>

			    <% answer.comments.each do |comment| %>

				<h2> <%= comment.body%></h2>
				<%end%>

					
					

				

						<h2>New Comment</h2>


						<%= form_for [answer, answer.comments.build] do |f| %>

						  <p>
						    <%= f.label :body%><br />
						    <%= f.text_area :body %>
						  </p>
						  <p><%= f.submit "Submit" %></p>
						<% end %>





			  </div>
			<% end %>




			<%= form_for [@question, @question.answers.build] do |f| %>
			    <div class="form-group">
			      <%= f.text_area :body, class: "form-control", placeholder: "Agregar respuesta" %>
			    </div>

			    <div class="actions text-right">
			      <%= f.submit "responder", class: "btn btn-primary" %>
			    </div>
			  <% end %>

		
			</hr>
			


			
			<h1>comentarios de la pregunta</h1>

			
			 

			    <% @question.comments.each do |comment| %>

				<h2> <%= comment.body%></h2>
				<%end%>

					
					

				

						<h2>New Comment</h2>


						<%= form_for [@question, Comment.new] do |f| %>
						  <p>
						    <%= f.label :body%><br />
						    <%= f.text_area :body %>
						  </p>
						  <p><%= f.submit "Submit" %></p>
						<% end %>



			  </div>
			



		</div>
	</div>
</div>